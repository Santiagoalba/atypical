<div class="form_container">
<div class="atypicalForm">

<div class="atypicalForm_title">ATYPICAL</div>

<form action="/updateAcc/{{_id}}?_method=PUT" class="formulario" method="POST">
    <input type="hidden" name="_method" value="PUT">
    
    <div class="atypicalForm_input">
        <input class="boxInput" type="text" name="name" placeholder="Name" id="nick" value="{{name}}">
    </div>
            
    <div class="atypicalForm_input">
      <input class="boxInput" type="email" name="email" placeholder="Mail" id="email" value="{{email}}">
    </div> 

    <button type="submit" class="orangeButton">Update!</button>
</form>
</div>
</div>